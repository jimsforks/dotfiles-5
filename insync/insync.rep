#!/usr/bin/env bash
#
# add repository
# https://www.insynchq.com/downloads

cd "$(dirname "$0")"
. ../resources/functions

rep=insync
source /etc/os-release

info ${rep}
sudo apt-key adv \
  --keyserver hkp://keyserver.${ID}.com:80 \
  --recv-keys ACCAF35C &>> log &&
echo deb http://apt.insynchq.com/${ID} ${VERSION_CODENAME} non-free contrib | \
  sudo tee /etc/apt/sources.list.d/${rep}.list &>> log &&
success ${rep} || fail ${rep}
