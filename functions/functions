say_hello () {
  echo "Hello"
}

blue=$(tput setaf 4)
green=$(tput setaf 2)
red=$(tput setaf 1)
normal=$(tput sgr0)

h1 () {
  printf "\r  =====> $1\n"
}

h2 () {
  printf "\r    =====> $1\n"
}

h3 () {
  printf "\r      =====> $1\n"
}

info () {
  printf "\r  [ ${blue}..${normal} ] $1\n"
}

success () {
  printf "\r\033[A\033[2K  [ ${green}OK${normal} ] $1\n"
}

fail () {
  printf "\r\033[A\033[2K  [${red}FAIL${normal}] $1\n"
  exit
}

install () {
  find . -mindepth 2 -name $1 | while read installer ; do bash ${installer} ; done
}

symlink () {
  echo "link"
}

update_and_upgrade () {
  sudo apt update &> /dev/null &&
    sudo apt -y upgrade &> /dev/null
}

install_packages () {
  sudo apt install $1 &> /dev/null &&
    success "$1" ||
      fail "$1"
}
