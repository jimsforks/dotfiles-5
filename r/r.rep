#!/usr/bin/env bash
#
# add repository
# https://www.digitalocean.com/community/tutorials/how-to-install-r-on-ubuntu-18-04

cd "$(dirname "$0")"
. ../resources/functions


info "r"
sudo apt-key adv \
  --keyserver hkp://keyserver.ubuntu.com:80 \
  --recv-keys E298A3A825C0D65DFD57CBB651716619E084DAB9 &>> log &&
echo deb deb https://cloud.r-project.org/bin/linux/ubuntu bionic-cran35/ | \
  sudo tee /etc/apt/sources.list.d/r.list &>> log &&
success "r" || fail "r"
