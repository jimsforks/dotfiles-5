#!/usr/bin/env bash
#
# add repositories
# https://www.spotify.com/uk/download/linux/

cd "$(dirname "$0")"
source ../resources/functions/main
source /etc/os-release

rep=spotify

info ${rep}
sudo apt-key adv \
  --keyserver hkp://keyserver.${ID}.com:80 \
  --recv-keys 931FF8E79F0876134EDDBDCCA87FF9DF48BF1C90 &>> log &&
echo deb http://repository.spotify.com stable non-free | \
  sudo tee /etc/apt/sources.list.d/${rep}.list &>> log &&
success "spotify" || fail "spotify"
